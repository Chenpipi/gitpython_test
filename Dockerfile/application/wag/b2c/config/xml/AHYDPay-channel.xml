<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="AHYDPay" class="com.bestv.wag.paychannel.ahydpay.AHYDPay" parent="payBase">
		<property name="payChannelCode">
			<value>${open_channel}</value>
		</property>
		<property name="spID">
			<value>${ahyd.pay.spID}</value>
		</property>
		<property name="timeout">
			<value>${ahyd.pay.timeout}</value>
		</property>
		<property name="service_address">
			<value>${ahyd.pay.ws}</value>
		</property>				
		<property name="slaveModuleDao">
			<ref bean="slaveModuleDao"></ref>
		</property>
	</bean>
	<bean id="ServiceImpl" class="com.bestv.wag.paychannel.ahydpay.ws.server.ServiceImpl">
		<property name="masterPayOrderDao" ref="masterPayOrderDao"></property>
		<property name="slaveModuleDao"><ref bean="slaveModuleDao"></ref></property>
	</bean>
</beans>